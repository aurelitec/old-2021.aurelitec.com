{% macro appHero(url, title, lead, getUrl, getText, extra, image) %}
  <section class="bg-aur-blue py-8 text-white shadow-md">
    <div class="aur-container">
      <div class="grid grid-cols-2 items-center justify-items-center">
        <div class="">
          <h1 class="text-xl font-medium leading-6">
            <a class="mb-2 block text-5xl font-display font-bold" href="{{ url }}">{{ title }}</a>
            {{ lead }}
          </h1>
          <div class="mt-6">
            <a class="aur-btn aur-btn-primary" href="{{ getUrl }}" role="button">{{ getText }}</a>
          </div>
          {% if extra %}
            <p class="">{{ extra }}</p>
          {% endif %}
        </div>
        <div class="">
          <a href="{{ url }}">
            <img class="border-2" src="{{ image | imgurl }}" alt="{{ title }}"/>
          </a>
        </div>
      </div>
    </div>
  </section>
{% endmacro %}
